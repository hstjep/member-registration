@model IEnumerable<MemberRegistration.ViewModels.InvoiceItemViewModel>

@{
    AjaxOptions ajaxOptions = new AjaxOptions { UpdateTargetId = "RacunStavkeList", HttpMethod = "Post", InsertionMode = InsertionMode.Replace };
}

<div id="RacunStavkeList">
    <h4>Lista stavki</h4>
    @using (Ajax.BeginForm("_InvoiceItemForInvoice", new { invoiceId = ViewBag.InvoiceId }, ajaxOptions))
    {
        <table class="table">
            <tr>
                <th>
                    Proizvod
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    Član
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Invoice.Id)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrencyUnit)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member.FullName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Invoice.Id)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyUnit)
                    </td>
                    <td>
                        @Html.ActionLink("Uredi", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Obriši", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        <div>@Html.Action("_Create", "InvoiceItem", new { invoiceId = ViewBag.InvoiceId })</div>
    }
</div>

